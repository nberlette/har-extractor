{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
	"harx": ["./harx.d.ts", "./harx.ts"],
	"harx/cli": ["./cli.d.ts", "./cli.ts"]
    },
    "sourceMap": false,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
