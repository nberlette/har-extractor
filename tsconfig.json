{
  "compilerOptions": {
    "strict": false,
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": ".",
    "isolatedModules": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["node", "mocha", "har-format"],
    "baseUrl": ".",
    "paths": {
      "harx": ["./src/harx.ts"],
      "harx/cli": ["./src/cli.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules", "dist", "**/node_modules/**"]
}
